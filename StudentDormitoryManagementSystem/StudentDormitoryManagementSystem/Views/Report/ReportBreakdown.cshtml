@model StudentDormitoryManagementSystem.Models.BreakdownViewModel
@{
    ViewBag.Title = "Report a breakdown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container contact">
    <div class="row">
        <div style="box-shadow: 0px 0px 5px rgba(51, 51, 51, 0.7);">
            <div class="col-md-4" style="height:470px">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                    <h2>Notify admins for an occured breakdown</h2>
                    <h4>They would try to eliminate it as fast as they can !</h4>
                </div>
            </div>
            @using (Html.BeginForm("ReportBreakdown", "Report", FormMethod.Post, new { area = "" }))
            {
                <div class="col-md-8">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="contact-form">
                        <div class="form-group">
                            <label>Title</label>
                            <br />
                            @Html.TextBoxFor(m => m.Title, new { @class = "col-sm-10" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                            <br />
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>Room number</label>
                                <br />
                                @Html.TextBoxFor(m => m.RoomNumber, new { @class = "col-sm-10" })
                                @Html.ValidationMessageFor(m => m.RoomNumber, "", new { @class = "text-danger" })
                                <br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>Severity</label>
                                <br />
                                @Html.DropDownList("SeverityList", null, new { @class = "col-sm-10" })
                                @Html.ValidationMessageFor(m => m.Severity, "", new { @class = "text-danger" })
                                <br />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <br />
                            @Html.TextAreaFor(m => m.Description, 10, 40, new { HtmlAttributes = new { } })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

