@{
    ViewBag.Title = "Admin Home Page";
}

<div class="col-md-6" style="margin-left:-200px;">
    <h2 id="adminPageTitle" class="text-center" style="color:green;">Admin panel</h2>
    <div id="sidebar" class="well sidebar-nav">
        <h5>
            <i class="glyphicon glyphicon-home"></i>
            <small><b> MANAGEMENT</b></small>
        </h5>
        <ul class="nav nav-pills nav-stacked">
            <li class="active">
                <a href="@Url.Action("Index", "AdminItems", new { area = "Admin" })">Home</a>
            </li>
            <li><a href="#">Search</a></li>
        </ul>
        <h5>
            <i class="glyphicon glyphicon-user"></i>
            <small><b> USERS</b></small>
        </h5>
        <ul class="nav nav-pills nav-stacked">
            <li>
                <a href="@Url.Action("ListUsers", "Users", new { area = "Admin" })">List</a>
            </li>
            <li><a href="#">Manage</a></li>
            <li>@Html.ActionLink("Register a new user", "Register", "Account", routeValues: new { Area = "" }, htmlAttributes: new { id = "registerLink" })</li>
        </ul>
        <h5>
            <i class="glyphicon glyphicon-exclamation-sign"></i>
            <small><b> TROUBLES</b></small>
        </h5>
        <ul class="nav nav-pills nav-stacked">
            <li>
                <a href="@Url.Action("GetCurrentBreakdowns", "Breakdowns", new { area = "Admin" })">Current</a>
            </li>
            <li>
                <a href="@Url.Action("GetAllBreakdowns", "Breakdowns", new { area = "Admin" })">History</a>
            </li>
        </ul>
        <h5>
            <i class="glyphicon glyphicon-th-list"></i>
            <small><b> ITEMS</b></small>
        </h5>
        <ul class="nav nav-pills nav-stacked">
            <li>
                <a href="@Url.Action("ListItems", "AdminItems", new { area = "Admin" })">List</a>
            </li>
            <li>
                <a href="@Url.Action("ExpiredItems", "AdminItems", new { area = "Admin" })">Show expired items</a>
            </li>
            <li>
                <a href="@Url.Action("AddNewItem", "AdminItems", new { area = "Admin" })">Add new item</a>
            </li>
        </ul>
        <h5>
            <i class="glyphicon glyphicon-globe"></i>
            <small><b> NEWS</b></small>
        </h5>
        <ul class="nav nav-pills nav-stacked">
            <li>
                <a href="@Url.Action("AddNews", "AdminNews", new { area = "Admin" })">Add news</a>
            </li>
        </ul>
    </div>
</div>
